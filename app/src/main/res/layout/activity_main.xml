<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huailai.club.a2048.MainActivity">

    <com.huailai.club.a2048.view.Game2048Layout
        android:layout_margin="5dp"
        android:id="@+id/id_game2048"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/background_rectangle"
        android:padding="10dp" >
    </com.huailai.club.a2048.view.Game2048Layout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/id_game2048"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="#EEE4DA"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/id_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Score: 0"
            android:textColor="#EA7821"
            android:textSize="30sp"
            android:textStyle="bold" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="等级"
                android:textColor="#EA7821"
                android:textSize="25sp"
                android:textStyle="bold" />
            <TextView
                android:gravity="center"
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="  +  "
                android:textColor="#EA7821"
                android:textSize="40sp"
                android:textStyle="bold" />
            <TextView
                android:gravity="center"
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="4"
                android:textColor="#EA7821"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:gravity="center"
                android:id="@+id/dec"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="  -  "
                android:textColor="#EA7821"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
